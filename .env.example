# Qdrant Cloud (hosted vector DB)
QDRANT_URL="https://YOUR-CLUSTER-URL.qdrant.io"
QDRANT_API_KEY="YOUR_QDRANT_API_KEY"
QDRANT_COLLECTION="mini_rag_chunks"
VECTOR_DIMENSIONS=1536

# OpenAI
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_CHAT_MODEL="gpt-4o-mini"

# Optional: Cohere reranker (recommended)
COHERE_API_KEY="YOUR_COHERE_API_KEY"
COHERE_RERANK_MODEL="rerank-english-v3.0"

# Chunking (approximate tokens using ~4 chars/token by default)
APPROX_CHARS_PER_TOKEN=4
CHUNK_TOKENS=1000
CHUNK_OVERLAP_TOKENS=120

# Retrieval
TOP_K=8
FETCH_K=40
MMR_LAMBDA=0.5

# Thresholds
MIN_VDB_SCORE=0.15
MIN_RERANK_SCORE=0.10

# Rough pricing (USD per 1M tokens) - optional, set to 0 to hide cost estimates
OPENAI_EMBED_USD_PER_1M=0
OPENAI_PROMPT_USD_PER_1M=0
OPENAI_COMPLETION_USD_PER_1M=0
